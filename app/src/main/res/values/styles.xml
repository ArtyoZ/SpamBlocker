<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stroke_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="stroke_teal_button" parent="stroke_button">
        <item name="android:textColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
    </style>
    <style name="stroke_gray_button" parent="stroke_button">
        <item name="android:textColor">@color/mid_grey</item>
        <item name="strokeColor">@color/mid_grey</item>
    </style>
    <style name="stroke_blue_button" parent="stroke_button">
        <item name="android:textColor">@color/dodger_blue</item>
        <item name="strokeColor">@color/dodger_blue</item>
    </style>
    <style name="stroke_red_button" parent="stroke_button">
        <item name="android:textColor">@color/salmon</item>
        <item name="strokeColor">@color/salmon</item>
    </style>

    <style name="setting_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="setting_label">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dodger_blue</item>
    </style>
    <style name="setting_spacing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="help_question_icon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="backgroundTint">@color/mid_grey</item>
    </style>
    <style name="setting_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="material_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/salmon</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="material_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
    </style>
</resources>