<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stroke_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="stroke_teal_button" parent="stroke_button">
        <item name="android:textColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
    </style>
    <style name="stroke_gray_button" parent="stroke_button">
        <item name="android:textColor">@color/text_grey</item>
        <item name="strokeColor">@color/text_grey</item>
    </style>
    <style name="stroke_blue_button" parent="stroke_button">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="strokeColor">@color/sky_blue</item>
    </style>
    <style name="stroke_red_button" parent="stroke_button">
        <item name="android:textColor">@color/salmon</item>
        <item name="strokeColor">@color/salmon</item>
    </style>

    <style name="setting_stroke_button" parent="stroke_button">
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="setting_stroke_blue_button" parent="setting_stroke_button">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="strokeColor">@color/sky_blue</item>
    </style>
    <style name="setting_stroke_teal_button" parent="setting_stroke_button">
        <item name="android:textColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
    </style>
    <style name="setting_stroke_gray_button" parent="setting_stroke_button">
        <item name="android:textColor">@color/text_grey</item>
        <item name="strokeColor">@color/text_grey</item>
    </style>
    <style name="setting_stroke_purple_button" parent="setting_stroke_button">
        <item name="android:textColor">@color/purple_200</item>
        <item name="strokeColor">@color/purple_200</item>
    </style>

    <style name="setting_spinner" parent="setting_stroke_button">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">-13dp</item>
        <item name="android:drawableEnd">@drawable/spinner_arrow</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <style name="setting_gray_spinner" parent="setting_spinner">
        <item name="android:textColor">@color/text_grey</item>
        <item name="strokeColor">@color/text_grey</item>
        <item name="android:drawableTint">@color/text_grey</item>
    </style>
    <style name="setting_blue_spinner" parent="setting_spinner">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="strokeColor">@color/sky_blue</item>
        <item name="android:drawableTint">@color/sky_blue</item>
    </style>
    <style name="setting_teal_spinner" parent="setting_spinner">
        <item name="android:textColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="android:drawableTint">@color/teal_200</item>
    </style>

    <style name="setting_auto_fit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="setting_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="setting_label">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxWidth">130dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="setting_blue_label" parent="setting_label">
        <item name="android:textColor">@color/sky_blue</item>
    </style>
    <style name="setting_spacing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="help_question_icon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="backgroundTint">@color/text_grey</item>
    </style>
    <style name="setting_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="material_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/salmon</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="startIconTint">@color/mid_grey</item>
        <item name="endIconTint">@color/mid_grey</item>
    </style>
    <style name="material_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="setting_group_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="setting_group_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="background">@drawable/shape_group_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="setting_group_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">-9dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/fragment_bg</item>
    </style>

</resources>