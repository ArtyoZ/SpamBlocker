<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_dialog_config_recent_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/material_input_layout"
            android:id="@+id/container_recent_app_in_x_min"
            app:startIconDrawable="@drawable/ic_duration">

            <com.google.android.material.textfield.TextInputEditText
                style = "@style/material_input"
                android:id="@+id/edit_recent_app_in_x_min"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/within_minutes"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/popup_recent_app_btn_save"
            style="@style/setting_stroke_blue_button"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="end"
            android:text="@string/save" />

    </LinearLayout>
</RelativeLayout>
